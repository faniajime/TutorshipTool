@model WebApplication156456.Models.MenuTutorModel
@{
    ViewBag.Title = "MenuTutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<style>
    .customHeader {
        text-align: left;
        font-weight: bold
    }

</style>

