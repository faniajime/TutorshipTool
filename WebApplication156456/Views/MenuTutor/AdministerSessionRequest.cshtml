                if (ViewBag.currentSession.modalidad == "Virtual") {
                    <div class="row list-group-item">
                        <div class="col-md-6">
                            <form id="id_administerSessionRequest_fields" action="/MenuTutor/SubmitSessionResponse" method="post">
